---
import Layout from "@/layouts/Layout.astro";
import Head from "@/components/Head.astro";
import Title from "@/components/Title.astro";
import { Image, Picture } from "astro:assets";
import me from "/src/assets/img/oleksii-vratskyi.jpg";
import github from "/src/assets/img/github.svg";
import blur from "/src/assets/img/bg.png";
import { getAbsoluteLocaleUrl } from "astro:i18n";

getAbsoluteLocaleUrl("en");
export const prerender = false;
import { Buffer } from 'node:buffer';

---

<Head title='About' />
<Layout class="relative">
  <div class="grid mt-[11.1111%] content-center">
    <Title text='About' />
  </div>
  <!-- ABOUT ME -->
  <section class="grid content-start px-3 lg:px-0 mb-[5rem] text-white">
    <Image
      src={blur}
      class="fixed top-0 bottom-0 left-0 right-0 m-auto h-full w-full object-cover object-center z-[-1]"
      alt="blur background"
    />
    <div class="grid grid-flow-col auto-cols-auto content-center mt-20">
      <div class="grid lg:grid-cols-2 blur-bg rounded-xl p-5 lg:py-24 lg:px-16">
        <div class="grid justify-center content-center mb-5 lg:mb-0">
          <Picture
            class="object-cover rounded-full ring-8 ring-white/80 w-full h-full max-w-[200px] max-h-[200px] lg:max-w-[250px] lg:max-h-[250px]"
            src={me}
            formats={["avif", "webp"]}
            width="300"
            height="300"
            alt='Oleksii Vratskyi'
          />
        </div>

        <div class="grid justify-center content-center">
          <h6
            class="text-4xl lg:text-5xl font-black bg-clip-text text-transparent bg-gradient-to-r from-primary-0 to-accent-0"
          >
          Oleksii Vratskyi
          </h6>
          <div class="text-xl font-light text-zinc-200 max-w-xl mt-5">
            <p>
              I am a freelancer from Ukraine, I am engaged in website development in different directions for several years, in this time I have managed to work with online stores, landing pages, blogs, etc.
            </p>
            <p class="mt-5">
              I will be glad to work with you to create together a good product that will allow you to attract more customers, as well as increase the attractiveness of your company on the Internet.
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-5">
      <div
        class="grid grid-cols-1 lg:grid-cols-2 content-center justify-center text-zinc-200 blur-bg rounded-xl p-5 min-h-[200px]"
