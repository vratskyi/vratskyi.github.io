        {post.data.categories}
      </li>
      <Tag text={post.data.tags} />
    </ul>


    <div class="horizontal-line"></div>
    
    <div class="pt-2">
      <div
      class="blur-bg rounded-xl p-3 lg:p-10 mb-10 mt-5 text-2xl lg:text-2xl text-pretty subpixel-antialiased break-words w-full mx-auto"
      >
      <h1
        class="text-4xl lg:text-5xl my-10 font-black bg-clip-text text-transparent bg-gradient-to-r from-primary-0 to-accent-0"
      >
        {post.data.title}
      </h1>
        <Prose> 
          <Content />
        </Prose>
      </div>
